@model Pesanan

@{
    Layout = "AdminLayout";
}

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h3>Edit User</h3>
            </div>

            <div class="card-body">
                <form method="post" action="Edit">
                    <input type="hidden" name="Id" value="@Model.Id">
                    <div class="mb-3">
                        <input type="hidden" name="Name" class="form-control" value="@Model.Name">
                    </div>
                    <div class="mb-3">
                        <input type="hidden" name="Photo" class="form-control" value="@Model.Photo">
                    </div>
                    <div class="mb-3">
                        <input type="hidden" name="Harga" class="form-control" value="@Model.Harga">
                    </div>
                    <div class="mb-3">
                        <input type="hidden" name="Barang" class="form-control" value="@Model.Barang">
                    </div>
                    <div class="mb-3">
                        <input type="hidden" name="NamaLengkap" class="form-control" value="@Model.NamaLengkap">
                    </div>
                    <div class="mb-3">
                        <input type="hidden" name="Alamat" class="form-control" value="@Model.Alamat">
                    </div>
                    <div class="mb-3">
                        <input type="hidden" name="NoTelepon" class="form-control" value="@Model.NoTelepon">
                    </div>
                    <div class="mb-3">
                        <select name="idStatus" asp-items="@ViewBag.Status" class="form-control">
                            @Model.Status.Stat
                        </select>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>